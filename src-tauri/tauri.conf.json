{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "one-app",
  "version": "0.1.0",
  "identifier": "ai.prometheusags.oneapp",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "one-app",
        "width": 1024,
        "height": 768,
        "minWidth": 960,
        "minHeight": 600,
        "resizable": true,
        "center": true,
        "decorations": false,
        "transparent": true
      }
    ],
    "macOSPrivateApi": true,
    "security": {
      "csp": "default-src 'self'; connect-src 'self' https://api.openai.com http://localhost:3000 ws://localhost:*; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob:;"
    },
    "withGlobalTauri": true
  },
  "plugins": {
    "window": {
      "minimizable": true,
      "maximizable": true,
      "closable": true
    },
    "sql": {
      "preload": ["sqlite"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
